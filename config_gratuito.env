# ===========================================
# CONFIGURACIÓN GRATUITA PARA TESTING
# ===========================================

# Aplicación
APP_NAME=Document Extractor API - Testing Gratuito
DEBUG=True
HOST=0.0.0.0
PORT=8005

# ===========================================
# BASES DE DATOS GRATUITAS
# ===========================================

# Opción 1: Supabase (PostgreSQL gratuito - 500MB)
# Registro: https://supabase.com/
DATABASE_URL=postgresql://postgres:[TU_PASSWORD]@db.[TU_PROYECTO].supabase.co:5432/postgres

# Opción 2: SQLite local (sin límites, solo local)
# DATABASE_URL=sqlite:///./data/documents.db

# Fallback siempre a SQLite
DATABASE_URL_FALLBACK=sqlite:///./data/documents.db

# ===========================================
# CACHE GRATUITO
# ===========================================

# Opción 1: Upstash Redis (10k requests/día gratis)
# Registro: https://upstash.com/
REDIS_URL=rediss://:[TU_PASSWORD]@[TU_HOST].upstash.io:6380
REDIS_HOST=[TU_HOST].upstash.io
REDIS_PORT=6380
REDIS_DB=0

# Opción 2: Redis local con Docker
# docker run --name redis-test -p 6379:6379 -d redis:7-alpine
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379

# ===========================================
# APIs GRATUITAS PARA TESTING
# ===========================================

# OpenAI - $5 gratis para nuevas cuentas (3 meses)
# Registro: https://platform.openai.com/
OPENAI_API_KEY=sk-proj-[TU_CLAVE_GRATUITA]
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0

# Google Vision - $300 créditos + 1000 requests/mes gratis
# Registro: https://console.cloud.google.com/
GOOGLE_APPLICATION_CREDENTIALS=./google-service-account.json
GOOGLE_VISION_DAILY_LIMIT=50

# AWS Textract - 1000 páginas/mes gratis (12 meses)
# Registro: https://aws.amazon.com/
AWS_ACCESS_KEY_ID=[TU_ACCESS_KEY]
AWS_SECRET_ACCESS_KEY=[TU_SECRET_KEY]
AWS_REGION=us-east-1
AWS_TEXTRACT_DAILY_LIMIT=30

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================
SECRET_KEY=testing-key-change-in-production-12345
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# LÍMITES PARA TESTING GRATUITO
# ===========================================
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_BURST=5
TESSERACT_CONFIDENCE_THRESHOLD=0.7
RQ_WORKER_TIMEOUT=300
RQ_QUEUE_NAME=document_processing

# Directorios
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs












