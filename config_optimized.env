# Configuración Optimizada del Sistema
# ====================================

# Aplicación
APP_NAME=Document Extractor API - Optimized
VERSION=2.1.0
ENVIRONMENT=development
DEBUG=True
HOST=0.0.0.0
PORT=8005

# Base de datos - PostgreSQL (producción) con fallback a SQLite
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/document_extractor
DATABASE_URL_TEST=postgresql://postgres:postgres@localhost:5432/document_extractor_test
DATABASE_URL_FALLBACK=sqlite:///./data/documents.db

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Configuración de pool de conexiones
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_PRE_PING=True
DB_POOL_RECYCLE=3600

# Directorios
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs
LOG_DIR=logs

# Tesseract
TESSERACT_CMD=

# Configuración OCR
GOOGLE_VISION_DAILY_LIMIT=200
AWS_TEXTRACT_DAILY_LIMIT=100
TESSERACT_CONFIDENCE_THRESHOLD=0.7

# Configuración LLM
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.0

# Configuración AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Configuración Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=

# Procesamiento asíncrono
RQ_WORKER_TIMEOUT=600
RQ_QUEUE_NAME=document_processing

# Seguridad
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-very-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Cache
CACHE_TTL_DEFAULT=300
CACHE_TTL_DOCUMENTS=600
CACHE_TTL_STATS=300
CACHE_MEMORY_SIZE=1000
CACHE_MEMORY_TTL=300

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=detailed
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5

# Performance
MAX_REQUEST_SIZE=10485760
REQUEST_TIMEOUT=30
WORKER_PROCESSES=4

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
